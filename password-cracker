import hashlib

hash_to_crack = input("Enter the MD5 hash: ")
wordlist_file = input("Enter wordlist file name (e.g. wordlist.txt): ")

try:
    with open(wordlist_file, "r") as file:
        for word in file:
            word = word.strip()
            hashed_word = hashlib.md5(word.encode()).hexdigest()

            if hashed_word == hash_to_crack:
                print(f"[âœ“] Password found: {word}")
                break
        else:
            print("[X] Password not found in wordlist.")
except FileNotFoundError:
    print("Wordlist file not found!")
